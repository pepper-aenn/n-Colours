<div class="form-container">
  <form action="/auth/signup" method="POST">
    <h2 class="FORMS">SignUp</h2>

    <div class="form-group row">
      <label for="inputUsername" class="col-sm-3 col-form-label">Username</label>
      <div class="col-sm-8">
        <input class="INPUT" name="username" type="username" class="form-control" id="inputUsername" placeholder="Thor">
      </div>
    </div>

    <div class="form-group row">
      <label for="inputPassword3" class="col-sm-3 col-form-label">Password</label>
      <div class="col-sm-8">
        <input class="INPUT" name="password" type="password" class="form-control" id="inputPassword3" placeholder="Thor's Password">
      </div>
    </div>

    <div class="form-group row">
      <label for="inputPassword3" class="col-sm-3 col-form-label">Email</label>
      <div class="col-sm-8">
        <input class="INPUT"  name="email" type="email" class="form-control" id="inputEmail" placeholder="Thor's Email">
      </div>
    </div>

    <div class="noAcc">
      <label class="account-message"> Already have an account?
        <a href="/"> <strong>LogIn.</strong></a>

      </label>
      <button id="createAcc">Create account</button>
    </div>
    

  {{#if message}}
  <div class="alert alert-danger" role="alert">
    {{message}}
  </div>
  {{/if}}
</form>

  </form>
</div>