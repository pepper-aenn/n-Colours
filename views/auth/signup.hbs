<div class="container">
  <h2>Signup</h2>


  <div action="/auth/signup" method="POST">
    <div id="f-group">

      <div class="form-group row">
        <label class="col-m-2" for="username" id="user">Username</label>
        <div class="col-sm-6">
          <input class="col-m-7" id="username" type="text" name="username" placeholder="Anna" class="form-control">
        </div>
      </div>

      <div class="form-group row">
        <label class="col-m-2" for="password" id="pw">Password</label>
        <div class="col-sm-6">
          <input class="col-m-7" id="password" type="password" name="password" placeholder="Your password" class="form-control">
        </div>
      </div>


      <div class="form-group row">
        <label class="col-m-2" for="email" id="mail">Email</label>
        <div class="col-sm-6">
          <input class="col-m-7" id="email" type="email" name="email" placeholder="Your email">
        </div>
      </div>
    </div>


    {{#if message }}
    <div class="alert alert-danger" role="alert">
      A simple danger alertâ€”check it out!
    </div>
    <div class="error-message">{{ message }}</div>
    {{/if}}

    <div id="createAcc">
      <form class="form-inline">
        <div class="input-group mb-5 mr-sm-1 mb-sm-0">

          <button>Create account</button>
        </div>
    </div>


    <form class="form-inline">
      <div class="input-group mb-2 mr-sm-2 mb-sm-0" id="LogIn">

        <p class="account-message">
          Already have an account?
          <a href="/" id="LogIn"> <strong>LogIn.</strong></a>
        </p>
      </div>
    </form>
    </form>
  </div>