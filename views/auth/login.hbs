<div class="form-container">
  <form action="/" method="POST">
    <h2 class="FORMS">Login</h2>
    
      <div class="form-group row">
        <label for="inputUsername" class="col-sm-3 col-form-label">Username</label>
        <div class="col-sm-8">
          <input class="INPUT"type="username" name="username" class="form-control" id="inputUsername" placeholder="Thor">
        </div>
      </div>
      <div class="form-group row">
        <label for="inputPassword3" class="col-sm-3 col-form-label">Password</label>
        <div class="col-sm-8">
          <input class="INPUT" type="password"name="password" class="form-control" id="inputPassword3" placeholder="Thor's Password">
        </div>
      </div>
      <div class="noAcc">
        <label class="account-message">
          No account yet?
          <a href="../auth/signup"> <strong>SignUp.</strong></a>
        </label>
        <button type="submit" class="submit">LogIn</button>
    </form>
</div>

